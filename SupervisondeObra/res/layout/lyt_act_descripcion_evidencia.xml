<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >         

        <ImageView
            android:id="@+id/img_act_desc_evidencia_imagen"
            android:layout_width="@dimen/destination_width"
            android:layout_height="@dimen/destination_height"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:scaleType="center"
            android:visibility="gone"
            android:src="@drawable/ic_launcher" />

        <VideoView
            android:id="@+id/vdo_videoView_video"
            android:layout_width="@dimen/destination_width"
            android:layout_height="@dimen/destination_height"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txv_act_desc_evidencia_titulo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="@string/str_act_evi_titulo"
            android:textAlignment="gravity"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/edt_act_desc_evidencia_descripcion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:gravity="top|left"
            android:hint="@string/str_act_evi_hint"
            android:inputType="textMultiLine|textCapSentences" >

            <requestFocus />
        </EditText>
    </LinearLayout>

</RelativeLayout>
