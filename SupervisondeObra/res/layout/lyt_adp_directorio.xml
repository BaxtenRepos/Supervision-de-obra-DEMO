<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:orientation="horizontal" >
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="0.61"
                android:focusable="true"
                android:gravity="left"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txv_NombreDirectorio"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:gravity="left"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="txv_NombreDirectorio" />

                <TextView
                    android:id="@+id/txv_TipoEmpresaDirectorio"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:textStyle="italic"
                    android:text="txv_TipoEmpresaDirectorio" />

                <TextView
                    android:id="@+id/txv_CorreoElectDirectorio"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:textStyle="italic"
                    android:text="txv_CorreoElectDirectorio" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="124dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txv_Telefono"
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:gravity="right"
                    android:textSize="12dp" 
                    android:textStyle="italic"
                    android:text="Telefono"/>

                <TextView
                    android:id="@+id/txv_TelefonoDirectorio"
                    android:layout_width="137dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="txv_TelefonoDirectorio" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>